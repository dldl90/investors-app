{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ESNext"
  },
  "exclude": [
    "node_modules",
    "node_modules/*",
    "build",
    "./server.ts",
    "./scripts/injectEnv.ts"
  ]
}
